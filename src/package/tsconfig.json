{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "types": ["react"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "rootDir": "./component",
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "typeRoots": ["types", "../../node_modules/@types"],
  },
  "include": ["component", "types",  "../vite-env.d.ts"]
}